                    <span id="<%=data.username%>-count"> 
                        <%=data.bumps.length%>
                    </span> 
                    <i class="fa fa-paper-plane" aria-hidden="true"></i> 
                </span>
            <% } %>
            <div style="margin:5px"></div>
                <%=data.content%>
